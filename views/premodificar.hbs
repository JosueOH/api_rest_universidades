<div class="container">
  <h4 class="text-uppercase text-center">Modificar universidad</h4>

  <form action="/modificar/plantilla" method="POST" class="form-horizontal">
    <div class="form-group">
      <label for="nombreCompleto">Ingresa el id de la universidad que quieras modificar:</label>
      <input type="text" id="_id" name="_id" class="form-control" placeholder="ID"
      autofocus>
    </div>
    <div>
      <button type="submit" name="button" class="btn btn-primary">Listo</button>
    </div>
  </form>
</div>

<table class="table table-bordered">
          <thead>
          <tr>
            <th scope="col"> #ID </th>
               <th scope="col"> Nombre completo </th>
          </tr>
          </thead>
    <tbody>
<div class = "container-fluid">
  {{#each info}}
      <tr>
      <th scope="row">{{_id}}</th>
      <td>{{nombreCompleto}}</td>
    </tr>
     {{/each}}
</div>
  </tbody>
</table>